{
    "package": {
        "productName": "Vital Utilities",
        "version": "0.1.2"
    },
    "build": {
        "distDir": "../build",
        "devPath": "http://localhost:3000",
        "beforeDevCommand": "npm run start",
        "beforeBuildCommand": "",
        "withGlobalTauri": true
    },
    "tauri": {
        "bundle": {
            "active": true,
            "targets": "msi",
            "identifier": "Vital-Utilities",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "resources": [
                "../../bin"
            ],
            "externalBin": [],
            "copyright": "Copyright Â© 2022 Snazzie, Aaron Cooper. All rights reserved.",
            "category": "Utility",
            "shortDescription": "The ultimate system utility",
            "longDescription": "The ultimate system utility",
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": ""
            }
        },
        "systemTray": {
            "iconPath": "icons/icon.ico"
        },
        "updater": {
            "active": false
        },
        "allowlist": {
            "all": true,
            "http": {
                "all": true,
                "request": true
            },
            "shell": {
                "all": true
            },
            "fs": {
                "all": true
            },
            "notification": {
                "all": true
            }
        },
        "windows": [
            {
                "title": "Vital Utilities",
                "width": 1200,
                "height": 800,
                "minWidth": 1200,
                "minHeight": 800,
                "resizable": true,
                "fullscreen": false,
                "alwaysOnTop": true
            }
        ],
        "security": {
            "csp": "default-src blob: data: filesystem: ws: wss: http: https: tauri: 'unsafe-eval' 'unsafe-inline' 'self' img-src: 'self'"
        }
    }
}